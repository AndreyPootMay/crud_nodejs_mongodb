<% include partials/_header %>

<head>
  <style>
.footer {
   position: fixed;
   left: 0;
   bottom: 0;
   width: 100%;
   background-color: rgb(0, 204, 153);
   color: white;
   font-family: verdana;
   text-align: center;
}
</style>
<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  </head>

<div class="container">

  <div class="row">
    <!--FORM-->
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="title" placeholder="Título">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="Descripción" cols="80"
                placeholder="Añade una description"
                ></textarea>
            </div>
            <button class="btn btn-success" type="submit">
              Añadir
            </button>
          </form>
        </div>
      </div>
    </div>
<hr>
    <!-- LIST -->
    <div class="col-md-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>N°</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= tasks[i].title %></strong></td>
              <td><%= tasks[i].description %></td>
              <td>
                <a
                  class="<%= tasks[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/turn/<%= tasks[i]._id %>"><i class="icon-check"></i></a>
                <a href="/delete/<%= tasks[i]._id %>"
                  class="btn btn-danger">
                  <i class="icon-trash"></i>
                </a>
                <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">
                  <i class="icon-pencil"></i>
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>
</div>

 <div class="footer">
  <p>Niger Andrey Poot May - I.S.C.O - 6to</p>
</div>